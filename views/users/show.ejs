<%- include('../partials/header') %> 

<h1><%= title %></h1>
<img class="icon" src="<%=thisUser.altIcon%>">
<p>Name: <%=thisUser.alias%></p>
<% if (thisUser._id === user._id) { %>
  <a class="button-style" href="/users/<%=thisUser._id%>/edit">Edit Profile</a>
<% } %>
<br>
<h3>Favorite Questions:</h3>
<!-- check if thisUser matches user, change wording if needed -->
<% if (!questions.length) { %>
  <% if (thisUser._id === user._id) { %>
    <p>You have not favorited any Questions yet. Surely <i>something</i> has tickled your funny bone?</p>
  <% } else { %>
    <p><%=thisUser.alias%> has not liked any Questions yet.</p>
  <% } %>
<% } else {%>
<div class=list>
  <% questions.forEach(q => { %>
    <div><h3><a href="/questions/<%=q._id%>"><%=q.subject%></a></h3></div>
  <% }) %>
</div>
<% } %>


      
<%- include('../partials/footer') %> 